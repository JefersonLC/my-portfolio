---
export interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-slate-50">
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family: Menlo, Monaco, 'Lucida Console', 'Courier New', Courier,
      monospace;
    letter-spacing: -0.025rem;
  }

  h1,
  h2,
  h3,
  h4 {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      'Open Sans',
      'Helvetica Neue',
      sans-serif;
  }

  p {
    font-size: 0.9rem;
    line-height: 1.5;
    text-wrap: pretty;
  }
</style>
